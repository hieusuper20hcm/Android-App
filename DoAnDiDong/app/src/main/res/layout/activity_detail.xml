<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/nav_shopping"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#213244">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="#213244"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:tint="@android:color/white"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="REPRESENT"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingHorizontal="20dp"
                    />

                <ImageButton
                    android:id="@+id/like"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="#213244"
                    android:src="@drawable/ic_baseline_favorite_24"
                    android:tint="#fff" />
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/rvProduct"
                android:background="#C8F6F3F3"
                android:paddingBottom="80dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="210dp"
                        android:layout_height="210dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_baseline_shopping_cart_24"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flannel Sky"
                            android:textStyle="bold"
                            android:textSize="25dp"
                            android:layout_marginHorizontal="15dp"
                            android:textColor="#2B2C35"/>
                        <TextView
                            android:id="@+id/tv_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/tv_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giá: "
                                android:textStyle="italic"
                                android:textSize="25dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginVertical="10dp"
                                android:textColor="#2B2C35"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="70.0000 đ"
                                android:textStyle="bold"
                                android:textSize="25dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginVertical="10dp"
                                android:textColor="#D50000"
                                android:layout_weight="2"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnDatHang"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/button"
                    android:text="Mua"
                    android:textColor="#fff"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting."
                    android:textSize="25dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>



</RelativeLayout>